Subject: [PATCH 5/6] x86 enable building on clang/Mingw

---
 src/win/Makefile.mingw     | 6 +++---
 src/win/Makefile_ndr.mingw | 4 ++--
 2 files changed, 5 insertions(+), 5 deletions(-)

diff --git a/src/win/Makefile.mingw b/src/win/Makefile.mingw
index 0a37bbf2..1c3b46fc 100644
--- a/src/win/Makefile.mingw
+++ b/src/win/Makefile.mingw
@@ -274,9 +274,9 @@ else
 TOOL_PREFIX     := i686-w64-mingw32-
 endif
 CPP             := ${TOOL_PREFIX}g++
-CC              := gcc
-WINDRES		:= windres
-STRIP		:= strip
+CC              := ${TOOL_PREFIX}gcc
+WINDRES		:= ${TOOL_PREFIX}windres
+STRIP		:= ${TOOL_PREFIX}strip
 ifeq ($(ARM64), y)
 CPP		:= aarch64-w64-mingw32-g++
 CC		:= aarch64-w64-mingw32-gcc
diff --git a/src/win/Makefile_ndr.mingw b/src/win/Makefile_ndr.mingw
index b4c4e220..61fcfc48 100644
--- a/src/win/Makefile_ndr.mingw
+++ b/src/win/Makefile_ndr.mingw
@@ -269,8 +269,8 @@ TOOL_PREFIX     := i686-w64-mingw32-
 endif
 CPP             := ${TOOL_PREFIX}g++
 CC              := ${TOOL_PREFIX}gcc
-WINDRES		:= windres
-STRIP		:= strip
+WINDRES		:= ${TOOL_PREFIX}windres
+STRIP		:= ${TOOL_PREFIX}strip
 ifeq ($(ARM64), y)
 CPP		:= aarch64-w64-mingw32-g++
 CC		:= aarch64-w64-mingw32-gcc
